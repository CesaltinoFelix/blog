<%- include('./partials/header.ejs') %>
<%- include('./partials/navbar.ejs') %>
<div class="container mt-5">
    <h2 class="text-center mb-5">📝 Welcome to Our Blog</h2>
    <div class="row">
        <% if (articles.length > 0) { %>
            <% articles.forEach(article => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><%= article.title %></h5>
                            <p class="text-muted">Category: <%= article.Category.title %></p>
                            <p class="card-text"><%= article.summary %></p>
                            <a href="/articles/<%= article.slug %>" class="btn btn-primary btn-sm">📖 Read More</a>
                        </div>
                        <div class="card-footer text-muted text-end">
                            Published on <%= new Date(article.createdAt).toLocaleDateString() %>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12 text-center text-muted">
                <p>No articles available at the moment. Check back later!</p>
            </div>
        <% } %>
    </div>
</div>
<%- include('./partials/footer.ejs') %>
